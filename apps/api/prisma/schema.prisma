datasource db {
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String?
  name      String?
  googleId  String?  @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  createdProposals  DecisionProposal[] @relation("CreatedProposals")
  decidingProposals DecisionProposal[] @relation("DeciderProposals")
  decisionsMade     Decision[]         @relation("DecisionsMade")
}

enum Criticality {
  LOW
  MEDIUM
  HIGH
  CRITICAL
}

model DecisionProposal {
  id          String      @id @default(cuid())
  title       String
  context     String?
  dueDate     DateTime
  criticality Criticality

  creatorId String
  creator   User   @relation("CreatedProposals", fields: [creatorId], references: [id])

  deciderId String
  decider   User   @relation("DeciderProposals", fields: [deciderId], references: [id])

  options  DecisionOption[]
  decision Decision?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model DecisionOption {
  id    String @id @default(cuid())
  text  String
  order Int    @default(0)

  proposalId String
  proposal   DecisionProposal @relation(fields: [proposalId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  decision Decision?
}

model Decision {
  id String @id @default(cuid())

  proposalId String           @unique
  proposal   DecisionProposal @relation(fields: [proposalId], references: [id])

  selectedOptionId String         @unique
  selectedOption   DecisionOption @relation(fields: [selectedOptionId], references: [id])

  decidedByUserId String
  decidedBy       User   @relation("DecisionsMade", fields: [decidedByUserId], references: [id])

  rationale String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
